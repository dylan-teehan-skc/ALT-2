#Statistics
#To find averages of Christmas exams
import statistics
# importing the required module
import matplotlib.pyplot as plt

results = [94,77,51,91,95,79,77]

mean= statistics.mean(results)
mode= statistics.mode(results)
median= statistics.median(results)

print (mean)
print (mode)
print (median)


 
# x axis values
x = ["mean","median", "mode"]
# corresponding y axis values
y = [mean,median,mode]
 
# plotting the points
plt.plot(x, y)
 
# naming the x axis
plt.xlabel('x - axis')
# naming the y axis
plt.ylabel('y - axis')
 # giving a title to my graph
plt.title('My Subject Results')
# function to show the plot
plt.show()
